@model IEnumerable<MovieStatusViewModel>

@{
    ViewData["Title"] = "History";
}

<h2 class="text-center">Borrowing history</h2>

<div class="container">
    <table class="table center text-center table-striped table-responsive table-hover">
        <thead>
            <tr>
                <th>Movie title</th>
                <th>Borrower</th>
                <th>Borrower address</th>
                <th>Date borrowed</th>
                <th>Date returned</th>
                <th>Date of expire</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var status in Model)
            {
                @Html.DisplayFor(model => status);
            }
        </tbody>
    </table>
</div>