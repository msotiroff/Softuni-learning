@model CostEntryCreateViewModel

<h2>Add cost entry</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DateCreated" class="control-label"></label>
                <input  asp-for="DateCreated" class="form-control" />
                <span asp-validation-for="DateCreated" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Odometer" class="control-label"></label>
                <input asp-for="Odometer" class="form-control" />
                <span asp-validation-for="Odometer" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <div class="row">
                    <div class="col-md-4">
                        <input asp-for="Price" class="form-control" /><br />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                    <div class="col-md-8">
                        <select asp-for="CurrencyId" asp-items="@Model.AllCurrencies" class="form-control">
                            <option disabled selected>---Select---</option>
                        </select>
                        <span asp-validation-for="CurrencyId" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="CostEntryTypeId" class="control-label"></label>
                <select asp-for="CostEntryTypeId" asp-items="@Model.AllCostEntryTypes" class="form-control"></select>
                <span asp-validation-for="CostEntryTypeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Note" class="control-label"></label>
                <textarea asp-for="Note" rows="4" class="form-control"></textarea>
                <span asp-validation-for="Note" class="text-danger"></span>
            </div>
            <input asp-for="VehicleId" value="@Model.VehicleId" hidden="hidden" />
            <div class="form-group">
                <input type="submit" value="Add" class="btn btn-success" />
                <a class="btn btn-default" href="/">Cancel</a>
            </div>
        </form>
    </div>
</div>