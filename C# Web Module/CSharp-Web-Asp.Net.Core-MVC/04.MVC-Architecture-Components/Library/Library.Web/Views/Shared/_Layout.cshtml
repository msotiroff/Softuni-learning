<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Library</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="~/css/all.css" rel="stylesheet" />
</head>
<body>
    <nav class="navbar navbar-expand-md navbar-dark bg-dark fixed-top">
        <a class="navbar-brand" href="/">Library</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    <a class="nav-link" asp-controller="book" asp-action="index">Books</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="movie" asp-action="index">Movies</a>
                </li>
            </ul>

            <form method="get" asp-controller="home" asp-action="search" class="form-inline">
                <div class="input-group">
                    <input name="searchTerm" type="text" class="form-control" placeholder="search books &amp movies">
                    <div class="input-group-append">
                        <button type="submit" class="btn btn-default"><span class="fa fa-search"></span></button>
                    </div>
                </div>
            </form>

        </div>
    </nav>

    <partial name="_CookieConsentPartial" />

    <div class="container-fluid">
        <br />
        @Html.DisplayNotification()

        @RenderBody()
        <hr />
        <footer>
            <p>&copy; 2018 - Library</p>
        </footer>
    </div>

    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/all.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
