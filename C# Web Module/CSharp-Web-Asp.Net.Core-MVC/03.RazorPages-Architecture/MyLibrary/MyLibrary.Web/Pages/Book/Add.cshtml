@page
@model MyLibrary.Web.Pages.Book.AddModel

<h2 class="text-center">Add Book</h2>

<div class="container body-content">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form method="post">
                <div class="form-group">
                    <label class="control-label font-weight-bold">Title:</label>
                    <input asp-for="Title" type="text" class="form-control" />
                </div>
                <div class="form-group">
                    <label class="control-label font-weight-bold">Description:</label>
                    <textarea asp-for="Description" rows="5" class="form-control"></textarea>
                </div>
                <div class="form-group">
                    <label class="control-label font-weight-bold">Cover image url:</label>
                    <input asp-for="CoverImageUrl" type="text" class="form-control" />
                </div>
                <div class="form-group">
                    <label class="control-label font-weight-bold">Authors:</label>
                    <select class="form-control" asp-for="@Model.SelectedAuthors" asp-items="@Model.AllAuthors" multiple="multiple"></select>
                    <br />
                    <a class="btn btn-dark" asp-page="/author/create" asp-route-returnUrl="/book/add">Add new author</a>
                </div>
                <div class="form-group">
                    <br />
                    <input type="submit" value="Add Book" class="btn btn-success" />
                    <a href="/" class="btn btn-dark">Cancel</a>
                </div>
            </form>
        </div>
    </div>

</div>