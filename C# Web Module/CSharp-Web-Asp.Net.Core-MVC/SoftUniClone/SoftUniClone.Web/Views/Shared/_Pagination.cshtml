@model PaginationViewModel

@{
    string previousPageDisabled = Model.CurrentPage == 1 ? "disabled" : string.Empty;
    string nextPageDisabled = Model.CurrentPage == Model.TotalPages ? "disabled" : string.Empty;

    string actionLinkPreviousPage = $"{Model.ActionLink}page={Model.PreviousPage}";
    string actionLinkNextPage = $"{Model.ActionLink}page={Model.NextPage}";
}

<ul class="pagination">
    <li class="page-item @previousPageDisabled">
        <a class="page-link @previousPageDisabled" href="@actionLinkPreviousPage" aria-label="Previous">
            <span aria-hidden="true">&laquo;</span>
            <span class="sr-only">Previous</span>
        </a>
    </li>
    @for (int i = 1; i <= Model.TotalPages; i++)
    {

        string currentPageActive = Model.CurrentPage == i ? "active" : string.Empty;
        string actionLink = $"{Model.ActionLink}page={i}";

        <li class="page-item @currentPageActive"><a class="page-link" href="@actionLink">@i</a></li>
    }
    <li class="page-item @nextPageDisabled">
        <a class="page-link @nextPageDisabled" href="@actionLinkNextPage" aria-label="Next">
            <span aria-hidden="true">&raquo;</span>
            <span class="sr-only">Next</span>
        </a>
    </li>
</ul>