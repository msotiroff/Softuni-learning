@page
@model MyLibrary.Web.Pages.Home.IndexModel
@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <div class="col-md-4"></div>
    <div class="col-md-4">
        <h1 class="text-center">My Library</h1>
    </div>
</div>
<div class="container">
    <div class="col-md-5"></div>
    <a asp-page="/Book/Add" class="btn btn-success col-md-2">Add new Book</a>
</div>
<br />

<div class="container body-content">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Title</th>
                <th>Author</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var book in Model.Books)
            {
                <tr>
                    <td>
                        <a href="/Book/Details/@book.Id">@book.Title</a>
                    </td>
                    <td>@book.Authors</td>
                    <td>@book.Status</td>
                </tr>
            }
        </tbody>
    </table>
</div>