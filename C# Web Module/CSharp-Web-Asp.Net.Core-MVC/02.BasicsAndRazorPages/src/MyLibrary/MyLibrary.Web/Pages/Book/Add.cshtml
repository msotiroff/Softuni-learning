@page
@model MyLibrary.Web.Pages.Book.AddModel
@{
    ViewData["Title"] = "Add Book";
}

<h2 class="text-center">Add Book</h2>
<hr />

<div class="container body-content well">
    <div class="col-md-3"></div>
    <div class="row text-center">
        <div class="col-md-6">
            <form method="post">
                <div class="form-group">
                    <label class="control-label">Title:</label><br />
                    <input asp-for="BookBindingModel.Title" type="text" class="form-control" />
                </div>
                <div class="form-group">
                    <label class="control-label">Description:</label><br />
                    <textarea asp-for="BookBindingModel.Description" rows="5" class="form-control"></textarea>
                </div>
                <div class="form-group">
                    <label class="control-label">Cover image url:</label><br />
                    <input asp-for="BookBindingModel.CoverImageUrl" type="text" class="form-control" />
                </div>
                <div class="form-group">
                    <label class="control-label">Authors:</label><br />
                    <input asp-for="BookBindingModel.Authors" type="text" class="form-control" />
                </div>
                <div class="form-group">
                    <br />
                    <input type="submit" value="Add Book" class="btn btn-success" />
                    <a href="/" class="btn btn-default">Cancel</a>
                </div>
            </form>
        </div>
    </div>

</div>